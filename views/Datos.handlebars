<body>
  <h1>Skate Park</h1>

  <div class="py-4">
    <h2>Datos del perfil {{ nombre }}</h2>
    <hr class="w-50" />

    <form action="/upload" method="POST" enctype="multipart/form-data">
      <div class="form-group row w-50 m-auto">
        <div class="form-group col-12 col-sm-6">
          <input id="=foto" type="file" name="foto" />
          <label>Email</label>
          <input name="email" class="form-control m-auto" disabled value="{{email}}" type="hidden" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Nombre</label>
          <input name="nombre" class="form-control m-auto" value="{{nombre}}" type="hidden" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Password</label>
          <input type="password" class="form-control m-auto" value="{{password}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Repita la password</label>
          <input name="password" type="password" class="form-control m-auto" value="{{password}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Años de experiencia</label>
          <input class="form-control m-auto" value="12" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Especialidad</label>
          <input name="especialidad" class="form-control m-auto" value="{{especialidad}}" />
        </div>
      </div>
      <div class="mb-1">
        <button onclick='editarDatos()' type="submit" value="¡Cambiar Datos" class="btn btn-primary">Actualizar</button>
      </div>
      <div>
        <button onclick='eliminarCuenta()' type="submit" value="¡Cuenta eliminada!" class="btn btn-danger">Eliminar
          cuenta</button>
      </div>
    </form>
  </div>
</body>

